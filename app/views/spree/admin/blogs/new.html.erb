<% content_for :page_title do %>
  <%= I18n.t('spree_blogs.admin.new_blog') %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to I18n.t('spree_blogs.admin.back_to_blogs_list'), spree.admin_blogs_url, icon: 'arrow-left.svg' %>
<% end %>

<%= render "spree/shared/error_messages", target: @blog %>

<%= form_for [:admin, @blog] do |f| %>
  <fieldset class="no-border-top">
    <%= render partial: f %>
    <%= render partial: 'spree/admin/shared/new_resource_links' %>
  </fieldset>
<% end %>
